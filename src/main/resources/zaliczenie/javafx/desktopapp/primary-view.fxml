<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import com.sun.javafx.scene.control.DoubleField?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="zaliczenie.javafx.desktopapp.PrimaryController">


    <Label text="Podstawy programowania" styleClass="main-label">
        <VBox.margin>
            <Insets bottom="40.0" />
        </VBox.margin>
    </Label>


    <HBox alignment="CENTER" spacing="30.0">
        <VBox spacing="20.0">
            <ListView fx:id="list" prefHeight="313.0" prefWidth="300.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </ListView>

            <HBox alignment="CENTER" spacing="20.0">
                <Button text="Zapisz do pliku" />
                <Button text="Wczytaj z pliku" />
            </HBox>
        </VBox>

        <VBox>
            <Label>Imię:</Label>
            <TextField fx:id="name" prefHeight="35.0" prefWidth="230.0" promptText="wpisz imię">
                <VBox.margin>
                    <Insets bottom="20.0" top="8.0" />
                </VBox.margin>
            </TextField>

            <Label>Nazwisko:</Label>
            <TextField fx:id="surname" prefHeight="35.0" prefWidth="230.0" promptText="wpisz nazwisko">
                <VBox.margin>
                    <Insets bottom="20.0" top="8.0" />
                </VBox.margin>
            </TextField>

            <Label>Nr albumu:</Label>
            <TextField fx:id="studentNumber" prefHeight="35.0" prefWidth="230.0" promptText="wpisz nr. albumu">
                <VBox.margin>
                    <Insets bottom="20.0" top="8.0" />
                </VBox.margin>
            </TextField>

            <Label>Średnia ocena:</Label>
            <TextField fx:id="averageGrade" prefHeight="35.0" prefWidth="230.0" promptText="wpisz średnią ocenę">
                <VBox.margin>
                    <Insets bottom="31.0" top="8.0" />
                </VBox.margin>
            </TextField>

            <HBox alignment="CENTER" spacing="20.0">
                <Button text="Zapisz obiekt" />
            </HBox>
        </VBox>
    </HBox>

    <Label fx:id="response" styleClass="response-label">
        <VBox.margin>
            <Insets top="40.0" />
        </VBox.margin>
    </Label>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
